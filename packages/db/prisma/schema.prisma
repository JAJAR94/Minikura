generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ServerType {
  STATEFUL
  STATELESS
  REVERSE_PROXY
}

model Server {
  id        String   @id @default(cuid())
  name     String @unique
  address  String
  port     Int
  type     ServerType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}